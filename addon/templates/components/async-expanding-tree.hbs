{{#if beforeComponent}}
  {{component beforeComponent model=model}}
{{/if}}
{{#if expandable}}
    <div class="{{if expanded 'aet-expanded' 'aet-collapsed'}}" {{action 'toggleExpand'}}></div>
{{/if}}
{{#if loading}}
    <i class="fa fa-circle-o-notch fa-spin"></i>
{{/if}}
{{#if (and label.then (is-pending label))}}
  <span {{action 'clickItem' model}}>Loading...</span>
{{else}}
  <span {{action 'clickItem' model}}>{{if label.then (await label) label}}</span>
{{/if}}
{{#if afterComponent}}
  {{component afterComponent model=model}}
{{/if}}
{{#if expanded}}
  <ul class="sublist">
    {{#each children as |child|}}
      {{async-expanding-tree model=child config=config fetchChildrenOnInit=true}}
    {{/each}}
    {{#if showLoadMore}}
      <div class="aet-load-more">
        <span class="aet-shown">{{childrenSlice}}</span>
        <span class="aet-total">{{model.children.length}}</span>
        <button class="btn btn-info btn-sm" {{action 'loadMoreChildren'}}>load more</button>
      </div>
    {{/if}}
  </ul>
{{/if}}

