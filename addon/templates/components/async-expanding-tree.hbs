{{#if expandable}}
    <div class="{{if expanded 'aet-expanded' 'aet-collapsed'}}" {{action 'toggleExpand'}}></div>
{{/if}}
{{#if loading}}
    <i class="fa fa-circle-o-notch fa-spin"></i>
{{/if}}
<span {{action 'clickItem' model}}>{{label}}</span>

{{#if showSublist}}
    <ul class="sublist">
      {{#if expanded}}
        {{#each children as |child|}}
          {{async-expanding-tree model=child config=config fetchChildrenOnInit=true}}
        {{/each}}
        {{#if showLoadMore}}
            <button class="btn btn-info btn-sm" {{action 'loadMoreChildren'}}>load more</button>
        {{/if}}
      {{/if}}
    </ul>
{{/if}}
